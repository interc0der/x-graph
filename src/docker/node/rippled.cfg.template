[server]
port_rpc_admin_local
port_rpc_public
port_peer
port_ws_admin_local
port_ws_public
#ssl_key = /etc/letsencrypt/live/nft.whirled.io/privkey.pem
#ssl_cert = /etc/letsencrypt/live/nft.whirled.io/fullchain.pem


[port_rpc_admin_local]
port = ${NODE_PORT_ADMIN}
ip = 127.0.0.1
admin = 127.0.0.1
protocol = http

[port_rpc_public]
port = ${NODE_PORT_PUBLIC}
ip = 0.0.0.0
protocol = http,https

[port_peer]
port = ${NODE_PORT_PEER}
ip = 0.0.0.0
# alternatively, to accept connections on IPv4 + IPv6, use:
#ip = ::
protocol = peer

[port_ws_admin_local]
port = ${NODE_WS_ADMIN}
ip = 127.0.0.1
admin = 127.0.0.1
protocol = ws

[port_ws_public]
port = ${NODE_WS_PUBLIC}
ip = 0.0.0.0
protocol = ws,wss


[node_size]
large

# tiny
# small
# medium
# large
# huge

[node_db]
type=NuDB
path=/var/lib/rippled/db/nudb
advisory_delete=0

# How many ledgers do we want to keep (history)?
# Integer value that defines the number of ledgers
# between online deletion events
online_delete=256

[ledger_history]
# How many ledgers do we want to keep (history)?
# Integer value (ledger count)
# or (if you have lots of TB SSD storage): 'full'
256

[database_path]
/var/lib/rippled/db

[debug_logfile]
/var/log/rippled/debug.log

[sntp_servers]
time.windows.com
time.apple.com
time.nist.gov
pool.ntp.org

[ips]
# r.ripple.com 51235
# zaphod.alloy.ee 51235
# sahyadri.isrdc.in 51235
xls20-sandbox.rippletest.net 51235

[network_id]
20

[features]
NonFungibleTokensV1

[validators_file]
validators.txt

[rpc_startup]
{ "command": "log_level", "severity": "info" }

# severity (order: lots of information .. only errors)
# debug
# info
# warn
# error
# fatal

[ssl_verify]
1